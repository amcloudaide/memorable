{
  "name": "memorable",
  "version": "1.0.0",
  "description": "Photo management application with metadata editing, maps, and collections",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "keywords": [
    "photo",
    "metadata",
    "exif",
    "map",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^33.2.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "exifr": "^7.1.3",
    "leaflet": "^1.9.4",
    "piexifjs": "^1.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "sql.js": "^1.12.0",
    "webdav": "^5.8.0"
  },
  "build": {
    "appId": "com.memorable.app",
    "productName": "Memorable",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
